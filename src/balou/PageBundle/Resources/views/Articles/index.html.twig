{% extends '::base.html.twig' %}
{% block title %}Liste des Articles{% endblock %}

{% block body -%}

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">

                <h4>Les articles</h4>

                <a class="create-new" href="{{ path('admin_articles_new') }}"><button type="button" class="btn btn-primary">Ajouter une article</button></a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th>Createdat</th>
                                <th>Auteur</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for entity in entities %}
                                <tr>
                                    <td><a href="{{ path('admin_articles_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                    <td>{{ entity.titre }}</td>
                                    <td>{{ entity.contenu }}</td>
                                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                    <td>{{ entity.auteur }}</td>
                                    <td>
                                        <a href="{{ path('admin_articles_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
                                        <a href="{{ path('admin_articles_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
                                        <a href="{{ path('admin_articles_show', { 'id': entity.id }) }}"><i class="fa fa-trash-o"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
{% endblock %}


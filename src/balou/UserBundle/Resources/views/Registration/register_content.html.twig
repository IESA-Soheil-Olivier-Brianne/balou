<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Login - Balou</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/add.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/sb-admin-2.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/metisMenu.min.css') }}"/>


        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    	<div class="container">
            <div class="row row-register">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Inscrivez-vous pour continuer</h3>
                        </div>
                        <div class="panel-body">
            		   		<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
            		    {{ form_widget(form) }}
               					<div class="form-group">
            	        			<button class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</button>
            	    			</div>
                	
            				</form>
            			</div>
                    </div>
                </div>
            </div>
		</div>


		{% block javascripts %}{% endblock %}
        <script src="//code.jquery.com/jquery.min.js"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/add.js') }}"></script>
        <script src="{{ asset('js/metisMenu.min.js') }}"></script>
        <script src="{{ asset('js/sb-admin-2.js') }}"></script>
        <script src="{{ asset('bundles/baloupage/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    </body>
</html>

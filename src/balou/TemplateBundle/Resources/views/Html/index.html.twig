{% extends '::base.html.twig' %}
{% block title %}Liste contenu HMTL{% endblock %}

{% block body -%}

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Contenu</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_html_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.contenu }}</td>
                <td>
                    <a href="{{ path('admin_html_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
                    <a href="{{ path('admin_html_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            <a href="{{ path('admin_html_new') }}"><button type="button" class="btn btn-primary">Ajouter du contenu</button></a>
    {% endblock %}

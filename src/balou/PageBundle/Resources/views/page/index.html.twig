{% extends '::base.html.twig' %}
{% block title %}Liste de vos pages{% endblock %}

{% block body -%}

    <div class="row">
                <div class="col-lg-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">

                            <h4>Les pages</h4>

                            <a class="create-new" href="{{ path('page_new') }}"><button type="button" class="btn btn-primary">Ajoutez une page</button></a>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nom</th>
                                            
                                            <th>Ã‰tat</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for entity in entities %}
                                        <tr>
                                            <td><a href="{{ path('page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                            <td>{{ entity.title }}</td>
                                            
                                            <td>{{ entity.isPublished }}</td>
                                            <td>
                                                <a href="{{ path('page_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i></a>
                                                <a href="{{ path('page_edit', { 'id': entity.id }) }}"><i class="fa fa-pencil"></i></a>
                                                <a href="{{ path('page_show', { 'id': entity.id }) }}"><i class="fa fa-trash-o"></i></a>
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
    {% endblock %}

    

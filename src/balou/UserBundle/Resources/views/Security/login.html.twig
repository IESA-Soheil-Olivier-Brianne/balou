<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>Login - Balou</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}"/>
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/add.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/sb-admin-2.css') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/metisMenu.min.css') }}"/>


        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}


    <div class="container">
        <div class="row row-login">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Connectez-vous pour continuer ou <a href="{{ path ('fos_user_registration_register')}}">cr√©ez votre compte</a></h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path('fos_user_security_check') }}" method="post">
                        	<input class="form-control" type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Nom d'utilisateur" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Mot de passe" type="password" id="password" name="_password" required="required" value="">
                                </div>
                                <div class="checkbox">
                                    <label for="remember_me">
                                        <input type="checkbox" id="remember_me" name="_remember_me" value="on">Se souvenir de moi
                                    </label>
                                </div>
                                <button class="btn btn-lg btn-success btn-block" type="submit" id="_submit" name="_submit" value="">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>                            
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock fos_user_content %}


{% block javascripts %}{% endblock %}
        <script src="//code.jquery.com/jquery.min.js"></script>
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>
        <script src="{{ asset('js/add.js') }}"></script>
        <script src="{{ asset('js/metisMenu.min.js') }}"></script>
        <script src="{{ asset('js/sb-admin-2.js') }}"></script>
        <script src="{{ asset('bundles/baloupage/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    </body>
</html>

